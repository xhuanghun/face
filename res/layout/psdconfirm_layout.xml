<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:id="@+id/textview1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0"
     />
    <TextView 
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="新密码"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        
        />
    <EditText 
        android:id="@+id/newpassword_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textview1"
        android:layout_toRightOf="@id/newpassword"
        android:layout_marginLeft="45dp"
        android:background="@null"
        android:hint="请输入6~16位密码 "
        android:inputType="textPassword" 
        />
    
    <ImageButton
        android:id="@+id/myclearbutton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/newpassword_edit"
        android:layout_alignBottom="@+id/newpassword_edit"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
    
    <TextView 
        android:id="@+id/textview2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/newpassword_edit"
        android:background="#c0c0c0"
     />
    <TextView 
        android:id="@+id/textview3"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/textview2"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
     />
     <TextView 
        android:id="@+id/confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="确认密码"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        />
     <EditText 
        android:id="@+id/confirmpassword_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textview3"
        android:layout_toRightOf="@id/confirmpassword"
        android:layout_marginLeft="30dp"
        android:background="@null"
        android:hint="请再次输入密码 "
        android:inputType="textPassword" 
        />
     
     <ImageButton
        android:id="@+id/myclearbutton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/confirmpassword_edit"
        android:layout_alignBottom="@+id/confirmpassword_edit"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
     <TextView 
        android:id="@+id/textview4"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/confirmpassword_edit"
        android:background="#c0c0c0"
     />
     <Button 
        android:id="@+id/commit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_checkin"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="提交"
        />

</RelativeLayout>
