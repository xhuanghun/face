<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/textview_comp_code1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#c0c0c0"
     />
     <EditText
        android:id="@+id/comp_code_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textview_comp_code1"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="请输入你的公司代码" 
        android:background="@null">
      
    </EditText>
    
     <ImageButton
        android:id="@+id/myclearbutton_compcode_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/comp_code_edit"
        android:layout_alignBottom="@+id/comp_code_edit"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
    
    <TextView 
        android:id="@+id/textview_comp_code2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/comp_code_edit"
        android:background="#c0c0c0"
    />
    
    
    
    
     <TextView 
        android:id="@+id/textview1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/textview_comp_code2"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
     />

     <EditText
         android:id="@+id/telormail_edit"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="10dp"
         android:layout_below="@id/textview1"
         android:layout_toLeftOf="@+id/receive_id_btn"
         android:background="@null"
         android:hint="请输入您的员工编号 "
          />

     <Button
       android:id="@+id/receive_id_btn"
       android:layout_width="80dp"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@id/telormail_edit"
       android:layout_alignParentRight="true"
       android:layout_alignTop="@id/telormail_edit"
       android:text="获取验证码"
       android:background="@drawable/button_checkin"
       android:textColor="#FFFFFF"
      />
     
     <ImageButton
        android:id="@+id/myclearbutton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/receive_id_btn"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/telormail_edit"
        android:layout_alignBottom="@+id/telormail_edit"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
     
     <TextView 
        android:id="@+id/textview2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/receive_id_btn"
        android:background="#c0c0c0"
     />
      <TextView 
        android:id="@+id/textview3"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/textview2"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
     />
     <EditText
        android:id="@+id/receive_id_edit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textview3"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="请输入您收到的验证码" 
        android:enabled="false"
        android:background="@null">
      
    </EditText>
    
     <ImageButton
        android:id="@+id/myclearbutton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/receive_id_edit"
        android:layout_alignBottom="@+id/receive_id_edit"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
    
    <TextView 
        android:id="@+id/textview4"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/receive_id_edit"
        android:background="#c0c0c0"
    />
     <Button 
        android:id="@+id/confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_checkin"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="确定"
        />


</RelativeLayout>
