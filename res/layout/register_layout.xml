    <ImageButton
        android:id="@+id/myclearbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/reg_username_text"
        android:layout_alignBottom="@+id/reg_username_text"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
    
     <ImageButton
        android:id="@+id/myclearbutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/reg_password_text"
        android:layout_alignBottom="@+id/reg_password_text"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
     
     <ImageButton
        android:id="@+id/myclearbutton_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/reg_company_text"
        android:layout_alignBottom="@+id/reg_company_text"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
     
     <ImageButton
        android:id="@+id/myclearbutton_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/reg_email_text"
        android:layout_alignBottom="@+id/reg_email_text"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
     
     <ImageButton
        android:id="@+id/myclearbutton_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/reg_name_text"
        android:layout_alignBottom="@+id/reg_name_text"
        android:background="@null"
        android:visibility="gone"
        android:src="@drawable/clear" />
    
    <TextView
        android:id="@+id/reg_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_email_bg"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="点击下一步代表已阅读并同意《xxx协议》" />
	
</RelativeLayout>
